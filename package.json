{
  "name": "@manomano/toolkit",
  "version": "3.0.1",
  "description": "mano-toolkit component library",
  "author": "Colibri SAS - ManoMano",
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "style": "dist/index.css",
  "files": [
    "dist/*",
    "src/*"
  ],
  "dependencies": {
    "classnames": "^2.2.6",
    "prop-types": "^15.7.2",
    "react-spring": "^6.1.8",
    "react-table": "^6.10.0",
    "resize-observer-polyfill": "^1.5.1",
    "webpack": "^4.0.0"
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-spring": "^6.1.8",
    "react-table": "^6.10.0"
  },
  "devDependencies": {
    "@manomano/eslint-config": "^2.7.0",
    "@manomano/macgyver": "^2.7.0",
    "@manomano/prettier-config": "^2.0.0",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.12",
    "@semantic-release/gitlab": "^3.1.5",
    "@semantic-release/npm": "^5.1.9",
    "core-js": "^3.1.4",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.16.0",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.0",
    "prettier": "^1.18.2",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.1",
    "react-styleguidist": "^9.1.7",
    "semantic-release": "^15.13.16",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-scss": "^3.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,jsx,md,scss,json}": [
      "prettier --write",
      "git add"
    ],
    "*.{scss}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "scripts": {
    "build:demo": "styleguidist build",
    "build:lib": "macgyver rollup -c",
    "build:preprod": "styleguidist build",
    "build:prod": "styleguidist build",
    "lint": "eslint ./src --ext .js --ext .jsx",
    "lint:fix": "yarn lint --fix",
    "semantic-release": "npx semantic-release",
    "start": "styleguidist server",
    "styleguide": "styleguidist build",
    "stylelint": "stylelint src/**/**/*.scss",
    "test": "macgyver test",
    "test:coverage": "macgyver test --coverage"
  },
  "eslintConfig": {
    "extends": "@manomano/eslint-config",
    "rules": {
      "import/no-named-as-default": 0
    }
  }
}
